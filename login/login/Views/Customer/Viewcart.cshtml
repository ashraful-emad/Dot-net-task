@model List<login.EF.item>
@{
    ViewBag.Title = "View Cart";
}
@ViewBag.user_name!
<h2>Your Shopping Cart</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered">
        <tr>

            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total Price</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var cartItem in Model)
        {
            <tr>

                <td>@cartItem.Product.name</td>
                <td>@cartItem.Product.price</td>
                <td>@cartItem.quantity</td>
                <td>@(cartItem.Product.price * cartItem.quantity)</td>

                <td>
                    <a href="@Url.Action("RemoveFromCart", "Customer", new { productId = cartItem.Product.id,cartItem.quantity })">Remove</a>
                </td>

                <td> <a href="@Url.Action("Order", "Customer", new { productId = cartItem.Product.id,quantity= cartItem.quantity })">Order</a></td>
            </tr>
        }





    </table>




}
else
{
    <p>Your cart is empty.</p>
}

<a href="@Url.Action("Customer_Index", "Customer")">Back to Shopping</a>
